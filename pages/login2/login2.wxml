<view class="v1">
  <form>
    <view class="v2">
     <view class="dltext">登录</view>

     <!-- 手机号 -->
     <view class="phoneCs">
       <image src="/images/tabs/home-active.png" class="ph"></image>
       <input bindinput="getUsername" placeholder="请输入用户名" maxlength="10"/>
     </view>
  
     <!-- 密码 -->
     <view class=passwordCs">
       <image src="/images/tabs/message-active.png" class="ps"></image>
       <input bindinput="getPassword" type="password" placeholder="请输入密码" bindconfirm="login"/>
       <!-- <image src="/images/tabs/message.png" class="eye"></image> -->
     </view>
  
     <!-- 注册 和忘记密码  -->
     <view class="zhuce">
       <navigator>点击注册</navigator>
       <navigator>忘记密码?</navigator>
     </view>
  
     <!-- 登录按钮 -->
     <view class="denglu">
       <button class="btn-dl" form-type="submit" bindtap="login">登录</button>
     </view>
  
     <!-- 协议区  xieyi -->
     <view class="xieyi">
       <checkbox class="isXY"></checkbox>
       <view class="text-xy">同意小程序的《使用协议》</view>
     </view>
   </view>
  </form>
   
