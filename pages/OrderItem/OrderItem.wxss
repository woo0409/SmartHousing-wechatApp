/* pages/OrderItem/OrderItem.wxss */
/* pages/PaymentRecords/PaymentRecords.wxss */
page{
  background-color: rgb(240, 240, 240);
}
main{
  display: flex;
}
.records-title{
  display: flex;
  justify-content: center;
  font-size: 66rpx;
  font-weight: bold;
}
.PayPage{
  display: flex;
  flex-direction: column;
  padding-top: 20rpx;
  padding-bottom: 40rpx;
}
.center{
  display: flex;
  width: 90%;
  margin: 60rpx auto;
  background-color: white;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  border-radius: 40rpx;
  border: 1rpx solid white;
}

.item-tips{
  display: flex;
  margin: 0 auto;
  font-weight: bold;
}

.records-item{
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  font-size: 32rpx;

}

.records-item-text{
  display: flex;
  flex-direction: row-reverse;
  flex: 1.1;
  margin-left: 50rpx;
}
.records-item-input{
  color: gray;
  display: flex;
  flex-direction: row-reverse;
  margin-right: 50rpx;
  flex:2;
}
.line {
  width: 90%;
  height: 5rpx;
  background: #E0E3DA;
  margin: 0px 5% 0px 5%;
  text-align: center;
}

.red{
  color: red;
}

.records-pay{
  background-color: #1CD66C;
  display: flex;
  width: 80%;
  justify-content: center;
  align-items: center;
  margin: 0rpx auto;
}

.disable{
  pointer-events: none;
}

.records-pay-text{
  font-size: 40rpx;
  display: flex;
}

.error{
  display: flex;
  flex-direction: column;
  height: 400rpx;
}
.error-page{
  font-size: 60rpx;
  font-weight: bold;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}